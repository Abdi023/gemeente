                        img(class="w-[40rem] h-[30rem] object-cover" src="/images/pmv/projecten/viewproject/folder6/3.jpg", alt="")
                        img(class="w-[40rem] h-[30rem] object-cover" src="/images/pmv/projecten/viewproject/folder6/4.jpg", alt="")
